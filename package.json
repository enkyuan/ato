{
  "name": "ato",
  "version": "1.0.0",
  "private": true,
  "description": "Ato - Things 3...but better",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:web\" --names \"API,WEB\" --prefix-colors \"blue,magenta\"",
    "dev:api": "cd apps/api && go run cmd/main.go",
    "dev:web": "cd apps/web && pnpm dev",
    "build": "pnpm run build:web && pnpm run build:api",
    "build:web": "cd apps/web && pnpm build",
    "build:api": "cd apps/api && make build",
    "start": "concurrently \"pnpm run start:api\" \"pnpm run start:web\" --names \"API,WEB\" --prefix-colors \"blue,magenta\"",
    "start:api": "cd apps/api && ./bin/api",
    "start:web": "cd apps/web && pnpm preview",
    "docker:up": "cd docker && docker-compose up -d",
    "docker:down": "cd docker && docker-compose down",
    "docker:logs": "cd docker && docker-compose logs -f",
    "test": "pnpm run test:api && pnpm run test:web",
    "test:api": "cd apps/api && go test ./...",
    "test:web": "cd apps/web && pnpm test",
    "clean": "pnpm run clean:web && pnpm run clean:api",
    "clean:web": "cd apps/web && rm -rf dist node_modules",
    "clean:api": "cd apps/api && make clean",
    "install:web": "cd apps/web && pnpm install",
    "install:api": "cd apps/api && go mod download",
    "setup": "pnpm run docker:up && pnpm run install:web && pnpm run install:api",
    "lint": "pnpm run lint:web",
    "lint:web": "cd apps/web && pnpm lint",
    "format": "pnpm run format:web && pnpm run format:api",
    "format:web": "cd apps/web && pnpm format",
    "format:api": "cd apps/api && go fmt ./...",
    "db:migrate": "cd apps/api && go run cmd/migrate/main.go",
    "db:seed": "cd apps/api && go run cmd/seed/main.go"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
